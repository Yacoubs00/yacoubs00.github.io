<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.yacoubs.subs" name="Yacoub's Repository" version="1.0.0" provider-name="Yacoub00">
        <extension point="xbmc.addon.repository" name="Yacoub's Repository">
            <dir>
                <info compressed="false">https://yacoubs00.github.io/addons.xml</info>
                <checksum>https://yacoubs00.github.io/addons.xml.md5</checksum>
                <datadir zip="true">https://yacoubs00.github.io/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Yacoub's Subtitle Addon Repository</summary>
            <description lang="en">Repository for Yacoub's Subs - A comprehensive subtitle addon with multiple providers</description>
            <platform>all</platform>
            <license>MIT</license>
            <website>https://github.com/Yacoubs00/yacoubs00.github.io</website>
            <source>https://github.com/Yacoubs00/yacoubs00.github.io</source>
            <news>v1.0.0: Initial release</news>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
    <addon id="service.subtitles.yacoubs" name="Yacoub's Subs" version="1.0.0" provider-name="Yacoub">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
            <import addon="script.module.requests" />
            <import addon="vfs.libarchive" optional="true" />
        </requires>
        <extension point="xbmc.subtitle.module" library="main.py" />
        <extension point="xbmc.service" library="main_service.py" />
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Yacoub's Subs - Multi-Source Subtitles</summary>
            <description lang="en">Add your API keys in settings to use OpenSubtitles, SubDL, and SubSource providers. This addon is based on a4kSubtitles by a4k-openproject. Author: Yacoub00.</description>
            <platform>all</platform>
            <reuselanguageinvoker>true</reuselanguageinvoker>
            <license>MIT License</license>
            <website>https://github.com/yacoub-subs</website>
            <source>https://github.com/yacoub-subs/yacoubs-subs</source>
            <email>yacoub.subs@gmail.com</email>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
            <news>v1.0.0: Initial release with all providers from v6.3.0. Removed hardcoded API keys - users must add their own API keys for OpenSubtitles, SubDL, and SubSource in addon settings.</news>
        </extension>
    </addon>
</addons>
