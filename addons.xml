<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.yacoubs.subs" name="Yacoub's Repository" version="1.0.0" provider-name="Yacoub">
        <extension point="xbmc.addon.repository" name="Yacoub's Repository">
            <dir>
                <info compressed="false">https://yacoubs00.github.io/addons.xml</info>
                <checksum>https://yacoubs00.github.io/addons.xml.md5</checksum>
                <datadir zip="true">https://yacoubs00.github.io/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Yacoub's Subtitle Addon Repository</summary>
            <description lang="en">Repository for Yacoub's Subs - A comprehensive subtitle addon with multiple providers</description>
            <platform>all</platform>
            <license>MIT</license>
            <website>https://github.com/Yacoubs00/yacoubs00.github.io</website>
            <source>https://github.com/Yacoubs00/yacoubs00.github.io</source>
            <news>v1.0.0: Initial release</news>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
    <addon id="service.subtitles.yacoubs" name="Yacoub's Subs" version="6.4.0" provider-name="Yacoub">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
            <import addon="script.module.requests" />
            <import addon="vfs.libarchive" optional="true" />
        </requires>
        <extension point="xbmc.subtitle.module" library="main.py" />
        <extension point="xbmc.service" library="main_service.py" />
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Yacoub's Subs - Premium Multi-Source Subtitles</summary>
            <description lang="en">
Yacoub's Subs - Premium subtitles

Your ultimate subtitle solution with extensive language support:
✅ 40+ languages (English, Arabic, Spanish, French, German, Japanese, etc.)
✅ Movies, TV Shows, and Anime
✅ Specialized Arabic Anime support (28+ subs per episode)

Powered by 3 premium providers: OpenSubtitles, SubDL, SubSource

Features: Fast and reliable subtitle search with user-configurable API credentials.

Created and maintained by Yacoub.
        </description>
            <platform>all</platform>
            <reuselanguageinvoker>true</reuselanguageinvoker>
            <license>MIT License</license>
            <website>https://github.com/yacoub-subs</website>
            <source>https://github.com/yacoub-subs/yacoubs-subs</source>
            <email>yacoub.subs@gmail.com</email>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
            <news>v6.4.0: Streamlined to 3 premium providers (OpenSubtitles, SubDL, SubSource) with user-configurable API credentials. Enter your own API keys in settings for full access.</news>
        </extension>
    </addon>
</addons>